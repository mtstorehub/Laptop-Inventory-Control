
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mobile Phones Shopping</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>

<body>
   
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Online Laptops Shopping Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">                  
                    <li><a href="#" id="user_status" onclick="ShowCookieCount()">Welcome @Session["userName"]</a></li>
                    <li><a id="the_logout" runat="server" href="@Url.Action("LogOut","Login")">LogOut</a></li>
                    <li><a href="@Url.Action("CheckOut","Laptops")"><img src="~/Images/icon/shopping_card.png" width="25" height="25" /> Shopping Cart <span class="badge" id="buy_items">0</span></a></li>
                </ul>
            </div>

        </div>
    </div>
   
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/slide1.jpg" alt="Slide 1">
                </div>

                <div class="item">
                    <img src="~/Images/slide2.jpg" alt="Slide 2">
                </div>

                <div class="item">
                    <img src="~/Images/slide3.jpg" alt="Slide 3">
                </div>

                <div class="item">
                    <img src="~/Images/slide4.jpg" alt="Slide 4">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <br />
    <div class="container body-content">
        <div class="container">

            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active" id="the_home">@Html.ActionLink("Home", "Home", "Laptops")</li>
                    <li id="the_viewProducts">@Html.ActionLink("View Product", "Index", "Laptops")</li>
                    <li id="the_viewOrder">@Html.ActionLink("View Order", "Index", "Orders")</li>
                    <li id="the_checkInventory">@Html.ActionLink("Check Inventory", "CheckInventory", "Laptops")</li>
                    <li id="the_showUser">@Html.ActionLink("Show Users", "Index", "Users")</li>
                    <li id="category">
                        <div class="dropdown">
                            <a class="btn btn-default dropdown-toggle" id="the_category" type="button" style="border:none;padding-right:6em;" data-toggle="dropdown">
                                Category                
                                <span class="caret" style="margin-left:2em;"></span>                
                            </a>                            
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("All Products", "Products", new { id = ""})</li>
                                <li>@Html.ActionLink("Macbook", "Products", new { id = "Macbook"})</li>
                                <li>@Html.ActionLink("Acer", "Products", new { id = "Acer" })</li>
                                <li>@Html.ActionLink("HP", "Products", new { id = "HP" })</li>
                                <li>@Html.ActionLink("Lenovo", "Products", new { id = "Lenovo" })</li>
                                <li>@Html.ActionLink("Dell", "Products", new { id = "Dell" })</li>
                                <li>@Html.ActionLink("Asus", "Products", new { id = "Asus" })</li>
                            </ul>
                        </div>
                    </li>
                    
                    <li id="the_register">@Html.ActionLink("Register", "Create", "Users")</li>
                    <li id="the_login">@Html.ActionLink("Login", "Index", "Login")</li>
                    <li id="the_profile">@Html.ActionLink("Profile", "Profile", new { id = Session["userID"] })</li>                    
                    <li id="the_contactus">@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                </ul>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p style="margin-left:50px;"> Thida Shwe Sin&copy; @DateTime.Now.Year - Online Laptops Shopping</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        document.getElementById("buy_items").innerHTML = localStorage.length;
        @if (Session["userName"] == null)
        {
        <text>
        $('#the_logout').hide();
        $('#the_profile').hide();
        $('#the_login').show();
        </text>
        }
        else
        {
            <text>
        $('#the_logout').show();
        $('#the_profile').show();
        $('#the_login').hide();
        </text>
        }

        @if (Session["UserType"] == null)
         {//user
             <text>
        $('#the_viewProducts').hide();
        $('#the_viewOrder').hide();
        $('#the_showUser').hide();
        $('#the_checkInventory').hide();
        the_viewOrder
        </text>
        }
        else
        {
            <text>
        $('#the_viewProducts').show();
        $('#category').hide();
        $('#the_profile').hide();
        $('#the_viewOrder').show();
        $('#the_showUser').show();
        $('#the_checkInventory').show();
            </text>
        }



        function ShowCookieCount() {
            //var res = "";
            //for (var i = 0; i < localStorage.length; i++) {
            //    res += localStorage.key(i) + "(" + localStorage.getItem(localStorage.key(i)) + ")";
            //}
            //alert(res);
            alert(document.cookie.toString());
            //alert('@Session["isPresentOrder"]')
        }


    </script>
</body>
</html>