@model IEnumerable<InventoryControl.Models.Laptop>

@{
    ViewBag.Title = "Index";
}

<h2>Inventory Info</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.QTY)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QTY)
            </td>
            <td>
                @Html.ActionLink("Edit Qty", "EditQty", new { id = item.Laptop_ID })
            </td>
        </tr>
    }

</table>

<script>
    document.getElementById("the_home").className = "";
    var tabCheckInventory = document.getElementById("the_checkInventory");
    tabCheckInventory.className = "active";
</script>