@model IEnumerable<InventoryControl.Models.Laptop>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RAM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPU_MODEL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STORAGE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SCREEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OTHER_SPEC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRICE)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RAM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPU_MODEL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STORAGE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SCREEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OTHER_SPEC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRICE)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Laptop_ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.Laptop_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Laptop_ID })
            </td>
        </tr>
    }

</table>
<div>
    <ul class="pagination" id="pager">
        @{ var pages = Math.Ceiling((int)Session["InventoryDataCount"] / 6.0);}
        @for (int i = 0; i < pages; i++)
        {
            var label = i + 1;
            if ((int)Session["CurrentInventoryPageIndex"] == i)
            {
                <li class="active"><a href="@Url.Action("Index", "Laptops", new { page = @i })">@label</a></li>
            }
            else
            {
                <li><a href="@Url.Action("Index", "Laptops", new { page = @i })">@label</a></li>
            }


        }
    </ul>
</div>

<script>
    document.getElementById("the_home").className = "";
    var tabViewProducts = document.getElementById("the_viewProducts");
    tabViewProducts.className = "active";
</script>